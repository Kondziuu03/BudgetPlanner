@model BudgetPlanner.Core.ViewModels.TaskViewModel

@{
    ViewData["Title"] = Model.Heading;
}

<h1>@Model.Heading</h1>

@using (Html.BeginForm("Task", "Task"))
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Task.Id)

    <div class="form-group">
        @Html.LabelFor(x => x.Task.Name)
        @Html.TextBoxFor(x => x.Task.Name, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(x => x.Task.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Task.Value)
        @Html.TextBoxFor(x => x.Task.Value, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Task.Value)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Task.Quantity)
        @Html.TextBoxFor(x => x.Task.Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Task.Quantity)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Task.Comments)
        @Html.TextAreaFor(x => x.Task.Comments, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Task.Comments)
    </div>

    <button class="btn btn-primary btn-lg mb-2">Zapisz</button>
}

